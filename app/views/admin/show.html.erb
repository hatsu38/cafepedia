<h1 class="admin-title"><%= @store.name %>@Admin</h1>
  <div id="store_detail">
    <div class="container">
    <h2><%= @store.name %></h2>
    <table class="table">
      <tbody>
        <tr>
          <th><i class="fas fa-clock"></i></th>
          <td>
            <pre><%= @store.business_hour %></pre>
          </td>
        </tr>
        <tr>
          <th><i class="fas fa-train"></i></th>
          <td>
            <%= @store.access %>
          </td>
        </tr>
        <tr>
          <th><i class="fas fa-map-marker-alt"></i></th>
          <td>
            <%= @store.prefecture %><%= @store.city %><%= @store.other_address %>
          </td>
        </tr>
        <tr v-show="store.chair">
          <th><i class="fas fa-store-alt"></i></th>
          <td class="chair_volume">
            <%= @store.chair %>
          </td>
        </tr>
        <tr>
          <th><i class="fas fa-phone"></i></th>
          <td>
            <%= @store.tel %>
          </td>
        </tr>
        <tr>
          <th>HP</th>
          <td>
            <a href="<%= @store.hp %>" target="_blank">公式HP</a>
          </td>
        </tr>
      </tbody>
    </table>
    <div class="icons_box">
      <% if @store.smoking %>
      <i class="fas fa-smoking"></i>
      <% end %>
      <% if @store.wifi %>
      <i class="fas fa-wifi"></i>
      <% end %>
      <% if @store.socket %>
      <i class="fas fa-plug"></i>
      <% end %>
      <% if @store.iccard %>
      <div class="iccard_img_block">
        <img src="/uploads/iccard_service.jpg" class="iccard_icon">
      </div>
      <% end %>
    </div>
    <div class="map_block">
      <div id='map'></div>
      <a href="" id="to_map_app" target="_blank">地図アプリで見る</a>
    </div>
    </div>
  </div>
