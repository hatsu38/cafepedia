    <script>
$(function(){
  $(document).ready(function(){
    $('.modal').modal();
    var isFirstVist = JSON.parse(localStorage.getItem("isFirstVist"));
    if(!isFirstVist && navigator.userAgent.match(/(iPhone|iPad|iPod|Android)/)){
      $('#first_modal_btn').trigger('click');
    }
    $('#first_modal_btn').hide();
  });

  var ua = navigator.userAgent;
  if ((/Android/.test(ua) && /Linux; U;/.test(ua) && !/Chrome/.test(ua)) ||
    (/Android/.test(ua) && /Chrome/.test(ua) && /Version/.test(ua)) ||
    (/Android/.test(ua) && /Chrome/.test(ua) && /SamsungBrowser/.test(ua))) {
    // Android標準ブラウザだったときの処理
    $('.mainstore_image_cover').css('width','20%');
  }

  $("#contact_form .validate_input").on("keydown keyup keypress change", function() {
    if ($(this).val()) {
      $("#contact_form .contact_send_btn").prop("disabled", false);
    } else {
      $("#contact_form .contact_send_btn").prop("disabled", true);
    }
  });

  $("#leak_form .validate_input").on("keydown keyup keypress change", function() {
    if(leak_validate()) {
      $("#leak_form .leak_send_btn").prop("disabled", false);
    } else {
      $("#leak_form 1.leak_send_btn").prop("disabled", true);
    }
  });

  $('#contact_form').on('ajax:send',function(data, status, xhr){
    $('#contact_submit').val('送信中').attr({disabled: true});
  });
  $('#contact_form').on('ajax:success',function(data, status, xhr){
    $('#contact_submit').val('送信する').attr({disabled: false});
    $('.contact_flash').fadeIn();
    $('.contact_flash').delay(4000).fadeOut();
  });

  $('#leak_form').on('ajax:send',function(data, status, xhr){
    $('#leak_submit').val('送信中').attr({disabled: true});
  });
  $('#leak_form').on('ajax:success',function(data, status, xhr){
    $('#leak_submit').val('送信する').attr({disabled: false});
    $('.leak_flash').fadeIn();
    $('.leak_flash').delay(4000).fadeOut();
  });

  function leak_validate(){
    if($(".leak_name_input").val() && $(".leak_address_input").val() && $(".leak_url_input").val()){
      return true;
    }else{
      return false;
    }
  }
});
