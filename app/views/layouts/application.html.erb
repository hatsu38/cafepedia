      <%= form_tag(stores_leak_path, method: :post, remote: true, class: "row") { %>
        <div class="input-field message_form">
          <i class="fas fa-store prefix"></i>
          <%= text_field :leak, :name,:class => "validate_input leak_name_input", :id => "icon_prefix2", :placeholder => "" ,:required => true %>
          <label for="icon_prefix2">店名・店舗名をご記入ください <span class="red-text">(必須)</span></label>
        </div>

        <div class="input-field message_form">
          <i class="fas fa-map-marker-alt prefix"></i>
          <%= text_field :leak, :address ,:class => "validate_input leak_address_input", :id => "icon_prefix2",:placeholder => "" ,:required => true  %>
          <label for="icon_prefix2" class="">住所をご記入ください <span class="red-text">(必須)</span></label>
        </div>

        <div class="input-field message_form">
          <i class="fas fa-link prefix"></i>
          <%= text_field :leak, :url,:class => "validate_input leak_url_input", :id => "icon_prefix2",:placeholder => "" ,:required => true  %>
